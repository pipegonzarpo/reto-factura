<p id="notice"><%= notice %></p>

<h1>Listing Facturas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Cedula</th>
      <th>Producto</th>
      <th>Precio</th>
      <th>Iva</th>
      <th>Descuento</th>
      <th>Valor</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.nombre %></td>
        <td><%= factura.apellidos %></td>
        <td><%= factura.cedula %></td>
        <td><%= factura.producto %></td>
        <td><%= factura.precio %></td>
        <td><%= factura.iva %></td>
        <td><%= factura.descuento %></td>
                <td><%= factura.descripcion %></td>
                        <td><%= factura.valor %></td>
        <td><%= link_to 'Show', factura %></td>
        <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
        <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

